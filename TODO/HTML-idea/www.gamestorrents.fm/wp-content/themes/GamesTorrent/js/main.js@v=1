$( document ).ready(function() {
	if($('.title a').length){
		$('.title a').mouseenter(function() {
			$('.smoke_'+$(this).attr('smoke')).attr('src',$(this).attr('image'));
		});
	}
	if($("#owl-demo").length){
		$("#owl-demo").owlCarousel({
			  autoPlay: 3000, 
		 
			  items : 6,
			  itemsDesktop : [640,4],
			  itemsDesktopSmall : [414,3]
		 
		});
	}
});

(function($){
	$('#collapsePeliculas').on('shown.bs.collapse', function () {
	    $(this).prev().prev().find(".glyphicon").removeClass("glyphicon-chevron-right").addClass("glyphicon-chevron-down");
	});

	//The reverse of the above on hidden event:

	$('#collapsePeliculas').on('hidden.bs.collapse', function () {
	    $(this).prev().prev().find(".glyphicon").removeClass("glyphicon-chevron-down").addClass("glyphicon-chevron-right");
	});

	$('#collapsePeliculasHD').on('shown.bs.collapse', function () {
	    $(this).prev().prev().find(".glyphicon").removeClass("glyphicon-chevron-right").addClass("glyphicon-chevron-down");
	});

	//The reverse of the above on hidden event:

	$('#collapsePeliculasHD').on('hidden.bs.collapse', function () {
	    $(this).prev().prev().find(".glyphicon").removeClass("glyphicon-chevron-down").addClass("glyphicon-chevron-right");
	});

	$('.ps').each(function(){
		var anchor = $(this).text();
		var href = $(this).attr('rel');
		$(this).replaceWith('<a href="'+href+'">'+anchor+'</a>');
	});

})(jQuery)