function findGetParameter(parameterName) {
    var result = null,
        tmp = [];
    location.search
        .substr(1)
        .split("&")
        .forEach(function (item) {
          tmp = item.split("=");
          if (tmp[0] === parameterName) result = decodeURIComponent(tmp[1]);
        });
    return result;
}

$( ".selectrone" ).change(function() {
	link=document.location.href.split("?")[0];
	if(page){
		parm="s="+findGetParameter('s');
	}else{
		parm="filters";
	}
	if($( ".cation" ).val()!==""){
		if(parm==""){
			parm="category_name="+$( ".cation" ).val();
		}else{
			parm=parm+"&category_name="+$( ".cation" ).val();
		}
	}
	if($( ".langen" ).val()!==""){
		if(parm==""){
			parm="idioma="+$( ".langen" ).val();
		}else{
			parm=parm+"&idioma="+$( ".langen" ).val();
		}
	}
	if($( ".calidaden" ).val()!==""){
		if(parm==""){
			parm="calidad="+$( ".calidaden" ).val();
		}else{
			parm=parm+"&calidad="+$( ".calidaden" ).val();
		}
	}
	if($( ".formaten" ).val()!==""){
		if(parm==""){
			parm="formato="+$( ".formaten" ).val();
		}else{
			parm=parm+"&formato="+$( ".formaten" ).val();
		}
	}
	if($( ".regionen" ).val()!==""){
		if(parm==""){
			parm="region="+$( ".regionen" ).val();
		}else{
			parm=parm+"&region="+$( ".regionen" ).val();
		}
	}
	if($( ".crakeren" ).val()!==""){
		if(parm==""){
			parm="cracker="+$( ".crakeren" ).val();
		}else{
			parm=parm+"&cracker="+$( ".crakeren" ).val();
		}
	}
	document.location.href=link+"?"+parm;
});
